<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/driver_img"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:background="@drawable/rect_orange"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Name" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/driver_name_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:background="@drawable/rect_orange"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Phone" />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:id="@+id/driver_ph_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:background="@drawable/rect_orange"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver NRC" />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:id="@+id/driver_nic_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:background="@drawable/rect_orange"
                android:layout_marginTop="20dp"
                android:id="@+id/textView19"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxi Plate Number" />


            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:id="@+id/plate_number_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toLeftOf="@+id/call_customer_floatingBtn"
                    android:id="@+id/accepted_ok_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rect_button"
                    android:text="Ok" />



                <android.support.design.widget.FloatingActionButton
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/call_customer_floatingBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_phone_black_24dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>